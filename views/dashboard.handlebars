<div class="dashboard">
    <section>
    <h2>Create New Post</h2>

    <form id="new-post-form" class="new-post-form">
        <div>
        <label for="post-title">Title</label><br />
        <input type="text" id="post-title" name="post-title" />
        </div>
        <br />
        <div>
        <label for="post-content">Content</label><br />
        <textarea id="post-content" name="post-content"></textarea>
        </div>
        <br />
        <button id="{{user_id}}" type="submit" class="btn btn-primary">Create</button>
    </form>
    </section>
    <hr>
  

  {{!-- </div> --}}
  {{#if posts.length}}
  {{!-- <div> --}}
  <section class="post-section">
    <h2>Your Posts</h2>
    <ol>
      {{#each posts}}
      <li>
        {{title}}
        <a href="/edit-post/{{id}}"><button class="btn btn-primary">Edit post</button></a> <button id={{id}} class="btn btn-danger delete-post-btn">Delete post</button>
      </li>
      {{/each}}
    </ol>
  </section>
  {{/if}}
</div>



<script src="/javascript/new-post.js"></script>
<script src="/javascript/delete-post.js"></script>
